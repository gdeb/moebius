$main-color = #317fa6
$side-bar-width = 240px

body
     font-family: Copperplate Gothic Light, sans-serif
     font-family: Verdana, Geneva, sans-serif;
     font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif
     font-family: sans-serif;
     font-weight: 100

.mobile
    min-height: 100vh
    display: flex
    flex-direction: column

    .content
        flex-grow: 1

    .header, .footer
        background-color: $main-color
        text-align: center
        color: white
        height: 50px
        font-size: 22px
        display: flex
        align-items: center

.desktop
    position: fixed
    top: 0

    .sidebar
        background-color: $main-color
        width: $side-bar-width
        height: 100vh
        display: inline-block
        color: white
        vertical-align: top
        -webkit-user-select: none
        user-select: none

        ul
            list-style-type: none
            padding: 0
            text-align: center

        li
            cursor: pointer
            padding: 15px
            &:hover
                background-color: $main-color - 10%

        a
            pointer-events: none
            text-decoration: none
            color: white

        .title
            text-align: center
            font-size: 24px
            border-bottom: 1px solid white
            padding: 20px
            cursor: pointer
            &:hover
                background-color: $main-color - 10%

        .active
            background-color: $main-color - 7%

    .main-content
        display: inline-flex
        flex-direction: column
        height: 100vh
        width: "calc(100vw - %s)" % $side-bar-width
        overflow: auto
        position: fixed

        .header
            background-color: white - 5%
            text-align: center
            padding: 5px

        .footer
            text-align: center
            padding: 5px
            color: gray

        .content
            flex-grow: 1

.content
    padding: 20px
    max-width: 800px
    color: black + 10%

    h1
        color: black + 20%

button
    margin: 5px
    background: $main-color
    border-radius: 4px
    color: white
    border: 0px
    padding: 0.5em 1em

