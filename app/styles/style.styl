$main-color = #317fa6
$side-bar-width = 240px

body
     font-family: sans-serif;
     font-family: Copperplate Gothic Light, sans-serif
     font-weight: 100

.mobile
    min-height: 100vh
    display: flex
    flex-direction: column

    .content
        flex-grow: 1

    .navbar, .footer
        background-color: $main-color
        text-align: center
        color: white
        height: 50px
        font-size: 22px
        display: flex
        align-items: center

        .hamburger
            padding: 8px
            cursor: pointer

            &:hover
                background-color: $main-color - 5%

        .title
            flex-grow: 1
            margin-right: 50px

    .drawer
        border-top: 1px solid $main-color - 20%
        border-bottom: 1px solid $main-color - 20%
        overflow-y: hidden
        margin: 0
        list-style-type: none
        padding: 0
        text-align: center
        li
            height: 50px
            color: white
            background-color: $main-color
            font-size: 22px
            line-height: 50px
            cursor: pointer

            &:hover
                background-color: $main-color - 10%

            &.disabled
                color: white - 20%
                cursor: default

.desktop
    position: fixed

    .sidebar
        background-color: $main-color
        width: $side-bar-width
        height: 100vh
        display: inline-block
        color: white
        vertical-align: top
        -webkit-user-select: none
        user-select: none

        ul
            list-style-type: none
            padding: 0
            text-align: center

        li
            cursor: pointer
            padding: 15px
            &:hover
                background-color: $main-color - 10%
            &.active
                cursor: default

        a
            pointer-events: none
            text-decoration: none
            color: white

        .title
            text-align: center
            font-size: 24px
            border-bottom: 1px solid white
            padding: 20px
            cursor: pointer
            &:hover
                background-color: $main-color - 10%

        .active
            background-color: $main-color - 7%

    .main-content
        display: inline-flex
        flex-direction: column
        height: 100vh
        width: "calc(100vw - %s)" % $side-bar-width
        overflow: auto

        .header
            background-color: white - 5%
            text-align: center
            padding: 5px

        .footer
            text-align: center
            padding: 5px
            color: gray

        .content
            flex-grow: 1

.content
    padding: 20px
    max-width: 800px
    color: black + 10%

    h1
        color: black + 20%

    .post
        margin-top: 30px
        margin-bottom: 30px
        border-top: 1px solid lightgray

        h2
            color: black + 10%
            margin-bottom: 6px

        .date
            color: black + 30%
            margin-bottom: 15px

button
    margin: 5px
    background: $main-color
    border-radius: 4px
    color: white
    border: 0px
    padding: 0.5em 1em


[class*="icono-"]
    display: inline-block
    vertical-align: middle
    position: relative
    font-style: normal
    text-align: left
    text-indent: -9999px
    direction: ltr

[class*="icono-"]:before
    content: ''
    pointer-events: none

[class*="icono-"]:after
    content: ''
    pointer-events: none

.icono-bars
    box-sizing: border-box
    width: 20px
    height: 2px
    box-shadow: inset 0 0 0 32px, 0 -6px, 0 6px
    margin: 16px 7px
